{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "os",
          "style": "plain",
          "foreground": "p:os",
          "template": " {{ if .WSL }}WSL at {{ end }}{{.Icon}} "
        },
        {
          "type": "session",
          "style": "plain",
          "foreground": "p:blue",
          "template": " {{ if .SSHSession }}\ueba9 {{ end }}{{ .UserName }}@{{ .HostName }} "
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "p:pink",
          "template": " {{ .Path }} ",
          "properties": {
            "folder_icon": "..",
            "home_icon": "| \uf015 ",
            "style": "agnoster_short"
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "p:lavender",
          "template": " {{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Staging.Changed) (.Working.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }} ",
          "properties": {
            "branch_icon": "\ue725 ",
            "cherry_pick_icon": "\ue29b ",
            "commit_icon": "\uf417 ",
            "fetch_status": false,
            "fetch_upstream_icon": false,
            "merge_icon": "\ue727 ",
            "no_commits_icon": "\uf0c3 ",
            "rebase_icon": "\ue728 ",
            "revert_icon": "\uf0e2 ",
            "tag_icon": "\uf412 "
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "executiontime",
          "style": "plain",
          "foreground": "p:blue",
          "template": " {{ .FormattedMs }} ",
          "properties": {
            "always_enabled": true,
            "style": "austin",
            "threshold": 500
          }
        },
        {
          "type": "battery",
          "style": "plain",
          "foreground": "p:os",
          "template": " {{ if not .Error }}{{ .Icon }}{{ .Percentage }}{{ end }}{{ .Error }} ",
          "properties": {
            "charged_icon": "\udb80\udc79 ",
            "charging_icon": "\udb85\udc0b ",
            "discharging_icon": "\udb80\udc7e "
          }
        },
        {
          "type": "python",
          "style": "plain",
          "foreground": "p:pink",
          "template": " {{ if .Error }}{{ .Error }}{{ else }}{{ if .Venv }}{{ .Venv }} {{ end }}{{ .Full }}{{ end }} "
        },
        {
          "type": "cmake",
          "style": "plain",
          "powerline_symbol": "\ue0b0",
          "template": " {{ if .Error }}{{ .Error }}{{ else }}{{ .Full }}{{ end }} "
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "status",
          "style": "plain",
          "foreground": "#a6d189",
          "foreground_templates": [
            "{{ if .Error }}#e91e63{{ end }}"
          ],
          "template": " {{ .String }} ",
          "properties": {
            "always_enabled": true
          }
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "p:closer",
          "template": "  "
        }
      ],
      "newline": true
    }
  ],
  "palette": {
    "blue": "#8CAAEE",
    "closer": "p:os",
    "lavender": "#BABBF1",
    "os": "#ACB0BE",
    "pink": "#F4B8E4"
  }
}
